<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/DataInputTV"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ordi.salutation.DataInputActivity"
    tools:showIn="@layout/activity_data_input">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Имя (в именительном падеже)"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Пожелания (прилагательные в родительном падеже)"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
